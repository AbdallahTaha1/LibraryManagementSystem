@using LibraryManagementSystem.DTOs.TransactionDtos
@model CreateTransactionDto

@{
    ViewData["Title"] = "Create Transaction";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="bi bi-journal-plus me-2"></i>
                    <h4 class="mb-0">New Transaction</h4>
                </div>

                <div class="card-body p-4">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <form asp-action="Create" method="post">
                        <!-- User -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-semibold">User</label>
                            <select asp-for="UserId" class="form-select shadow-sm" asp-items="ViewBag.Users">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger small"></span>
                        </div>

                        <!-- Book -->
                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label fw-semibold">Book</label>
                            <select asp-for="BookId" class="form-select shadow-sm" asp-items="ViewBag.Books">
                                <option value="">-- Select Book --</option>
                            </select>
                            <span asp-validation-for="BookId" class="text-danger small"></span>
                        </div>

                        <!-- Transaction Type -->
                        <div class="mb-4">
                            <label asp-for="Type" class="form-label fw-semibold">Transaction Type</label>
                            <select asp-for="Type" class="form-select shadow-sm">
                                <option value="0"> Borrow</option>
                                <option value="1"> Return</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-1"></i> Save Transaction
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () { $('select').select2(); });
    </script>
}
