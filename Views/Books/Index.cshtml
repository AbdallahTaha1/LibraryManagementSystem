@using LibraryManagementSystem.DTOs.BookDtos
@model IEnumerable<BookDto>

@{
    ViewData["Title"] = "Book List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-secondary">Book List</h2>
    <a class="btn btn-primary btn-lg" asp-action="create">
        <i class="bi bi-plus-circle me-2"></i> Add Book
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning mt-5 text-center">
        <h4 class="alert-heading">No Books Added!</h4>
        <p class="mb-0">There are no books added yet.</p>
    </div>
}
else
{
    <table class="table table-hover table-striped table-bordered align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th style="width:120px;">Cover</th>
                <th>Title</th>
                <th>ISBN</th>
                <th style="width:180px;" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        <img src="@book.ImgSrc" alt="@book.Title" class="img-thumbnail" style="width: 100px;" />
                    </td>
                    <td class="fw-bold">@book.Title</td>
                    <td>@book.Isbn</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-info me-2" asp-action="Edit" asp-route-id="@book.Id">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <button class="btn btn-sm btn-danger js-delete" data-id="@book.Id">
                            <i class="bi bi-trash3"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script src="~/js/deleteBook.js" asp-append-version="true"></script>
}
