@using LibraryManagementSystem.Consts
@using LibraryManagementSystem.DTOs.BookDtos
@model UpdateBookDto
@{
    ViewData["Title"] = "Edit Book";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>
                Edit Book
            </h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter the book name" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Isbn" class="form-label fw-semibold"></label>
                            <input asp-for="Isbn" class="form-control" placeholder="Enter ISBN" />
                            <span asp-validation-for="Isbn" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumberOfCopies" class="form-label fw-semibold"></label>
                            <input asp-for="NumberOfCopies" class="form-control" placeholder="Enter ISBN" />
                            <span asp-validation-for="NumberOfCopies" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Img" class="form-label fw-semibold"></label>
                            <input asp-for="Img" type="file" class="form-control"
                                   data-rule-extension="@FileSettings.AllowedExtentions.Replace(".", string.Empty)"
                                   data-msg-extension="Not allowed extention"
                                   data-rule-filesize="@FileSettings.MaxFileSizeInBytes"
                                   data-msg-filesize="Maximum allowed size is @(FileSettings.MaxFileSizeInMB)MB">
                            <small class="form-text text-muted">
                                Allowed: @FileSettings.AllowedExtentions | Max: @(FileSettings.MaxFileSizeInMB)MB
                            </small>
                            <span asp-validation-for="Img" class="text-danger d-block"></span>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle me-1"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Back
                            </a>
                        </div>
                    </div>

                    <div class="col-md-6 d-flex justify-content-center align-items-start pt-3">
                        <img class="cover-preview border rounded shadow-sm"
                             alt="Cover Preview"
                             src="@Model.ImgSrc"
                             style="max-height: 350px; object-fit: contain;" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/fileSizeValidator.js" asp-append-version="true"></script>
    <script src="~/js/bookForm.js" asp-append-version="true"></script>
}
